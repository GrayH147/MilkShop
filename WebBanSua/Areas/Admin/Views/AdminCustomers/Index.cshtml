@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanSua.Models.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý khách hàng</code><code> <a asp-controller="AdminCustomers" asp-action="Index">> Danh sách</a></code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-action="Create">
                        <i class="fas fa-plus"></i>
                        Thêm
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">                           
                        </div>
                       
                        <div class="form-group col-md-4">
                            <div class="input-group">

                                <input type="text" id="keywordCus" name="keywordCus" class="form-control" placeholder="Tìm kiếm khách hàng..." aria-label="Amount (to the nearest dollar)">

                            </div>
                        </div>
                    </div>
                    <hr />
                    <table class="table">
                        <thead>
                            <tr>
                                <th> ID </th>
                                <th> Khách hàng </th>
                                @*<th> Email </th>
                                <th> SĐT </th>*@
                                <th>Địa chỉ</th>
                                <th>Trạng thái</th>
                                <th>#</th>

                            </tr>
                        </thead>
                        <tbody id="records_table_cus">
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><p>@item.CustomerId</p></td>
                                        <td>
                                            <p> <a style="color:black;" asp-action="Details" asp-route-id="@item.CustomerId">@item.FullName</a></p>
                                            <p> @item.Email</p>
                                            <p> @item.Phone</p>
                                            
                                        </td>
                                        <td>
                                            <p> @item.Address</p>
                                        </td>
                                        @*<td> @item.Email </td>
                                        <td> @item.Phone </td>*@
                                        <td>

                                            @if (item.Active)
                                            {
                                            <div>
                                                <p> <i class="mdi mdi-toggle-switch btn-outline-success"></i>Hoạt động</p>
                                            </div>

                                            }
                                            else
                                            {
                                                <div>
                                                    <p><i class="mdi mdi-toggle-switch-off btn-outline-danger"></i>Khóa</p>
</div>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.CustomerId"><i class="fas fa-edit"></i></a>
                                            <a class="btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.CustomerId"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index" />
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            
            $("#keywordCus").keyup(function () {
                var strkeyword = $('#keywordCus').val();
                $.ajax({
                    url: '/Admin/Search/FindCustomer/',
                    datatype: "json",
                    type: "POST",
                    data: { keywordCus: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#records_table_cus").html("");
                        $("#records_table_cus").html(results);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });

        });
    </script>
}
