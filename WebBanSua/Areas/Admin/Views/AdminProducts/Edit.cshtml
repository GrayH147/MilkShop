@model WebBanSua.Models.Product

@{
    ViewData["Title"] = "Cập nhật:" + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý sản phẩm</code><code>> Cập nhật</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Sản phẩm</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Cập nhật sản phẩm : @Model.ProductName</h4>
                    <br />
                    <form class="forms-sample" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductId" />
                        <input type="hidden" asp-for="Thumb" />
                        <input type="hidden" asp-for="DateCreated" />

                        <div class="form-group">
                            <label for="exampleInputName1">Tên sản phẩm</label>
                            <input type="text" asp-for="ProductName" class="form-control" id="exampleInputName1">
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Giá nhập</label>
                                    <input type="text" class="form-control" asp-for="Price" id="exampleInputPassword4">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword4">Giá bán</label>
                                    <input type="text" class="form-control" asp-for="PriceSale" id="exampleInputPassword4">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputPassword4">% giảm giá</label>
                                    <input type="text" class="form-control" asp-for="Discount" id="exampleInputPassword4">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Số lượng hàng tồn</label>
                                    <input type="text" asp-for="UnitslnStock" class="form-control" id="exampleInputEmail3">
                                </div>
                            </div>

                            <div class="form-group col-md-4 p-5">

                                <select asp-for="CatId" class="form-control" asp-items="ViewBag.DanhMuc">
                                    <option value="" disabled selected>Chọn danh mục</option>
                                </select>

                            </div>
                        </div>

                        <div class="form-group">
                            <label>Hình ảnh</label>
                            <input type="file" name="fThumb" asp-for="Thumb">
                            <span asp-validation-for="Thumb" class="text-danger"></span>

                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputCity1">Tiêu đề</label>
                                    <input type="text" class="form-control" id="exampleInputCity1" asp-for="Title">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail3">Tag</label>
                                    <input type="text" asp-for="Tags" class="form-control" id="exampleInputEmail3">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputCity1">MetaDesc</label>
                                    <input type="text" class="form-control" id="exampleInputCity1" asp-for="MetaDesc">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputCity1">MetaKey</label>
                                    <input type="text" class="form-control" id="exampleInputCity1" asp-for="MetaKey">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail3">Mô tả ngắn</label>
                            <input type="text" asp-for="ShortDes" class="form-control" id="exampleInputEmail3">
                        </div>
                        <div class="form-group ">
                            <label for="exampleTextarea1">Mô tả</label>
                            <textarea class="form-control" asp-for="Des" id="exampleTextarea1" rows="4"></textarea>
                        </div>

                        <div class="form-group row">
                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input type="checkbox" asp-for="Active" class="form-check-input" checked> Active
                                </label>
                            </div>

                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input type="checkbox" asp-for="HomeFlag" class="form-check-input"> Home
                                </label>
                            </div>

                            <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                    <input type="checkbox" asp-for="BestSellers" class="form-check-input"> Best seller
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light" asp-action="Index">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>













