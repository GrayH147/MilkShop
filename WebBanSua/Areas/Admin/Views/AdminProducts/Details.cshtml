@model WebBanSua.Models.Product

@{
    ViewData["Title"] = "Thông tin: " + Model.ProductName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý sản phẩm</code><code>> Thông tin</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@Model.ProductId">
                        <i class="fas fa-plus"></i>
                        Cập nhật
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin sản phẩm: @Model.ProductName</h4>

                    <table class="table table-bordered">
                        <tr>
                            <td style="width:80px">
                                #ID
                            </td>
                            <td>
                                @Model.ProductId
                            </td>
                        </tr>
                        <tr>
                            <td style="width:80px">
                                Hình ảnh
                            </td>
                            <td>
                               <img width="400" height="400" src="~/images/products/@Model.Thumb" alt="@Model.Title" />
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Tên sản phẩm
                            </td>
                            <td>
                                @Model.ProductName
                            </td>
                        </tr>


                        <tr>
                            <td style="width:50px">
                                Giá nhập
                            </td>
                            <td>
                                @Model.Price
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Giá bán
                            </td>
                            <td>
                                @Model.PriceSale
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Giảm giá
                            </td>
                            <td>
                                @Model.Discount
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Active
                            </td>
                            <td>
                                @if (Model.Active)
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch btn-outline-success"></i> Còn hàng
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch-off btn-outline-danger"></i> Hết hàng
                                    </div>
                                }
                                
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Home
                            </td>
                            <td>
                                @if (Model.HomeFlag)
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch btn-outline-success"></i> Home
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch-off btn-outline-danger"></i> page
                                    </div>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Best Seller
                            </td>
                            <td>
                                @if (Model.BestSellers)
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch btn-outline-success"></i> Best seller
                                    </div>
                                }
                                else
                                {
                                    <div>
                                        <i class="mdi mdi-toggle-switch-off btn-outline-danger"></i> Thường
                                    </div>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Danh mục
                            </td>
                            <td>
                                @Model.Cat.CatName
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Tiêu đề
                            </td>
                            <td>
                                @Model.Title
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Tag
                            </td>
                            <td>
                                @Model.Tags
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                               MetaDesc
                            </td>
                            <td>
                                @Model.MetaDesc
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                MetaKey
                            </td>
                            <td>
                                @Model.MetaKey
                            </td>
                        </tr>

                        <tr>
                            <td style="width:50px">
                                Mô tả ngắn
                            </td>
                            <td>
                                @Model.ShortDes
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Mô tả
                            </td>
                            <td>
                                @Model.Des
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Ngày tạo
                            </td>
                            <td>
                                @Model.DateCreated
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Ngày chỉnh sửa
                            </td>
                            <td>
                                @Model.DateModified
                            </td>
                        </tr>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
