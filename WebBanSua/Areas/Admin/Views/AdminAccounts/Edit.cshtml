@model WebBanSua.Models.Account

@{
    ViewData["Title"] = "Cập nhật: "+Model.FullName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý hệ thống</code><code>> Quản lý tài khoản</code><code>> Cập nhật </code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Tài khoản</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@Model.AccountId" method="post" class="forms-sample">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="CreateDate" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">Họ và tên</label>
                            <input type="text" class="form-control" asp-for="FullName" id="exampleInputUsername1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Email</label>
                            <input type="email" class="form-control" asp-for="Email" id="exampleInputUsername1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Số điện thoại</label>
                            <input type="tel" class="form-control" asp-for="Phone" id="exampleInputUsername1">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Mật khẩu</label>
                            <input type="password" class="form-control" asp-for="Password" id="exampleInputUsername1">
                        </div>

                        <div class="form-group">
                            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.QuyenTruyCap">
                                <option value="" disabled selected>Chọn vai trò</option>
                            </select>
                        </div>

                        <br />

                        <br />
                        <div class="form-group row">
                            <div class="form-check form-check-primary">
                                <label style="margin-left:12px" class="form-check-label">
                                    <input type="checkbox" asp-for="Active" class="form-check-input" checked>Active
                                </label>
                            </div>
                        </div>
                        <button type="submit" value="Create" class="btn btn-gradient-info me-2">Submit</button>

                        <button asp-action="Index" class="btn btn-gradient-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>










