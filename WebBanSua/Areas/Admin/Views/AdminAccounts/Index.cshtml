@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanSua.Models.Account>

@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách tài khoản" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý hệ thống</code><code>> Quản lý tài khoản</code><code>> Danh sách</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-action="Create">
                        <i class="fas fa-plus"></i>
                        Thêm
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*<div class="row">
                        <div class="col-md-3">
                            <select name="idstatus" asp-items="ViewBag.lsTrangThai" class="form-control form-control-sm" id="idstatus">
                                <option value="" disabled selected>Chọn trạng thái</option>

                            </select>
                        </div>
                    </div>*@

                    <hr />
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> ID </th>
                                <th> Họ tên </th>
                                <th> Email </th>
                                <th> SĐT </th>
                                <th> Quyền truy cập </th>
                                <th> Trạng thái </th>
                                <th class="text-center">
                                    #
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AccountId</td>
                                        <td>
                                            <a style="color:black;" asp-action="Details" asp-route-id="@item.AccountId">@item.FullName</a>

                                        </td>
                                        <td> @item.Email </td>
                                        <td> @item.Phone </td>


                                        <td>
                                            @item.Role.Des
                                        </td>
                                        <td>
                                            @if (item.Active)
                                            {
                                                <div>
                                                    <i class="mdi mdi-toggle-switch btn-outline-success"></i> Active
                                                </div>
                                            }
                                            else
                                            {
                                                <div>
                                                    <i class="mdi mdi-toggle-switch-off btn-outline-danger"></i> Blocked
                                                </div>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a class="btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.AccountId"><i class="fas fa-edit"></i></a>
                                            <a class="btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.AccountId"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" />
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

















