@model WebBanSua.Models.Location

@{
    ViewData["Title"] = "Thông tin: "+Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý hệ thống</code><code>> Quản lý quyền tỉnh/thành</code><code>> Thông tin </code>
        </p>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-action="Edit" asp-route-id="@Model.LocationId">
                        <i class="fas fa-plus"></i>
                        Cập nhật
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Thông tin tỉnh/thành phố: @Model.Name</h4>

                    <table class="table table-bordered">
                        <tr>
                            <td style="width:50px">
                                #ID
                            </td>
                            <td>
                                @Model.LocationId
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Vai trò
                            </td>
                            <td>
                                @Model.Name
                            </td>
                        </tr>

                        <tr>
                            <td style="width:50px">
                                Địa phương
                            </td>
                            <td>
                                @Model.Type
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Cấp
                            </td>
                            <td>
                                @Model.Levels
                            </td>
                        </tr>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
