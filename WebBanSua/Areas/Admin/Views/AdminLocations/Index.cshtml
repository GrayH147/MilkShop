@model IEnumerable<WebBanSua.Models.Location>

@{
    ViewData["Title"] = "Danh sách tỉnh/thành phố";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý hệ thống</code><code>> Quản lý tỉnh thành</code><code>> Danh sách</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-action="Create">
                        <i class="fas fa-plus"></i>
                        Thêm
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> ID </th>
                                <th> Tên </th>
                               
                                <th> Địa phương </th>
                                <th class="text-center">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>  @item.LocationId </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.LocationId"> @item.Name</a>
                                    </td> 
                                    <td>
                                         @item.Type
                                    </td>
                                    <td>
                                         @item.Levels
                                    </td>
                                   
                                    <td class="text-center">
                                        <a class="btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.LocationId"><i class="fas fa-edit"></i></a>
                                        <a class="btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.LocationId"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

