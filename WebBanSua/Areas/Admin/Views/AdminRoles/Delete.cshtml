@model WebBanSua.Models.Role

@{
    ViewData["Title"] = "Xác nhận xóa: "+Model.RoleName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý quyền truy cập</code><code>> Xác nhận xóa</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@Model.RoleId">
                        <i class="fas fa-plus"></i>
                        Cập nhật
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Xác nhận xóa: @Model.RoleName</h4>

                    <table class="table table-bordered">
                        <tr>
                            <td style="width:50px">
                                #ID
                            </td>
                            <td>
                                @Model.RoleId
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50px">
                                Vai trò
                            </td>
                            <td>
                                @Model.RoleName
                            </td>
                        </tr>

                        <tr>
                            <td style="width:50px">
                                Mô tả
                            </td>
                            <td>
                                @Model.Des
                            </td>
                        </tr>

                    </table>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="RoleId" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <a asp-action="Index" class="btn btn-gradient-light">Cancel</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
        </div>

