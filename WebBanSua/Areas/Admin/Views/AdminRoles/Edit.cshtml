@model WebBanSua.Models.Role

@{
    ViewData["Title"] = "Cập nhật"+Model.RoleName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý page</code><code>> Cập nhật</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Phân quyền</a></li>
                <li class="breadcrumb-item active" aria-current="page">Cập nhật</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    
                    <h4 class="card-title">Cập nhật quyền: @Model.RoleName</h4>
                    <form  asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@Model.RoleId" class="forms-sample">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoleId" />
                        <div class="form-group">
                            <label for="exampleInputUsername1">Vai trò</label>
                            <input type="text" class="form-control" asp-for="RoleName" id="exampleInputUsername1" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mô tả</label>
                            <input type="text" asp-for="Des" class="form-control" id="exampleInputEmail1">
                        </div>
                        
                        <button type="submit" value="Save" class="btn btn-gradient-info me-2">Save</button>

                        <button  asp-action="Index" class="btn btn-gradient-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>


