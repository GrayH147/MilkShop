@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<WebBanSua.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <p class="card-description">
            <a asp-controller="Home" asp-action="Index"><code>Home</code></a><code>> Quản lý hệ thống</code><code>> Quản lý quyền truy cập</code><code>> Danh sách</code>
        </p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a class="btn-sm btn-success " asp-action="Create">
                        <i class="fas fa-plus"></i>
                        Thêm
                    </a>
                </li>

            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> ID </th>
                                <th> Vai trò </th>
                                <th> Mô tả </th>
                                <th class="text-center">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>  @item.RoleId </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.RoleId"> @item.RoleName</a>
                                    </td>
                                    
                                    <td> @item.Des </td>
                                    <td class="text-center">
                                        <a class="btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.RoleId"><i class="fas fa-edit"></i></a>
                                        <a class="btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.RoleId"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <div aria-label="Page navigation example">
                        <ul class="pagination">
                            <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" />
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



