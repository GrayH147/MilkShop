@model WebBanSua.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">

<link href="~/Public/css/style.css" rel="stylesheet" />

<script src="~/Public/js/owl.carousel.min.js"></script>
<!-- Bootstrap CSS -->
<link href="~/Public/css/bootstrap.min.css" rel="stylesheet" />


<!-- Style -->

<link href="~/Public/css/login.css" rel="stylesheet" />
<link href="~/Public/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
<link href="~/Public/css/font-awesome.min.css" rel="stylesheet" type="text/css" />






<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row">
                        <img src="~/Public/images/Vinamilk_logo.jpg" class="logo">
                    </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img src="~/Public/images/banner_vinamilk.jpg" class="image">
                    </div>
                </div>
            </div>



            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    <div class="row mb-4 px-3">
                        <div class="facebook text-center mr-3"><a href="/"><i class="fa fa-home"></i></a></div>
                    </div>
                    <div class="row px-3 mb-4">
                        <div class="line"></div>
                        <small class="or text-center">Đăng nhập</small>
                        <div class="line"></div>
                    </div>
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Tên đăng nhập</h6></label>
                            @*@Html.TextBoxFor(model => model.Email, "", new { @class = "form-control mb-3", @placeholder = "Email" })*@
                            <input type="text" class="form-control mb-3" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Mật khẩu</h6></label>
                            @*@Html.TextBoxFor(model => model.Password, "", new { @class = "form-control mb-3", @placeholder = "Email" })*@
                            <input type="password" class="form-control mb-3" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="row px-3 mb-4">
                            <div class="custom-control custom-checkbox custom-control-inline">
                                <input id="chk1" type="checkbox" name="chk" class="custom-control-input">
                                <label for="chk1" class="custom-control-label text-sm">Nhớ mật khẩu</label>
                            </div>
                            <a href="#" class="ml-auto mb-0 text-sm">Quên mật khẩu?</a>
                        </div>

                        <div class="form-group">
                            @ViewBag.error
                        </div>

                        <div class="row mb-3 px-3">
                            <button type="submit" name="submit" value="Login" class="btn btn-blue text-center">Đăng nhập</button>
                        </div>

                    </form>
                    <div class="row mb-4 px-3">
                        <small class="font-weight-bold">Bạn chưa có tài khoản? <a href="/dang-ky.html" class="text-danger ">Đăng ký</a></small>
                    </div>
                </div>
            </div>


        </div>
        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. Đã đăng ký Bản quyền.</small>
                <div class="social-contact ml-4 ml-sm-auto">
                    <span class="fa fa-facebook mr-4 text-sm"></span>
                    <span class="fa fa-google-plus mr-4 text-sm"></span>

                </div>
            </div>
        </div>
    </div>
</div>







