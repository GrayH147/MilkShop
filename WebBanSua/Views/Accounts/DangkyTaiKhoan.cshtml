@model WebBanSua.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">

<link href="~/Public/css/style.css" rel="stylesheet" />

<script src="~/Public/js/owl.carousel.min.js"></script>
<!-- Bootstrap CSS -->
<link href="~/Public/css/bootstrap.min.css" rel="stylesheet" />


<!-- Style -->

<link href="~/Public/css/login.css" rel="stylesheet" />
<link href="~/Public/css/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">
<link href="~/Public/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row">
                        <img src="~/Public/images/Vinamilk_logo.jpg" class="logo">
                    </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img src="~/Public/images/banner_vinamilk.jpg" class="image">
                    </div>
                </div>
            </div>



            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    <div class="row mb-4 px-3">

                        <div class="facebook text-center mr-3"><a href="/"><i class="fa fa-home"></i></a></div>

                    </div>
                    <div class="row px-3 mb-4">
                        <div class="line"></div>
                        <small class="or text-center">Đăng ký</small>
                        <div class="line"></div>
                    </div>
                    <form asp-action="DangkyTaiKhoan">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Họ và tên</h6></label>
                            <input type="text" asp-for="FullName" class="form-control mb-4" />
                            <span asp-validation-for="FullName" class="text-danger"></span>

                        </div>
                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Email</h6></label>
                            <input type="email" asp-for="Email" class="form-control mb-4" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Số điện thoại</h6></label>
                            <input type="tel" asp-for="Phone" class="form-control mb-4" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="row px-3">
                            <label class="mb-1"><h6 class="mb-0 text-sm">Ngày sinh</h6></label>
                            <input type="datetime" asp-for="NgaySinh" class="form-control mb-4" />
                            <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        </div>
                        <div class="row pt-xl-3">
                            <div class="col-md-6">
                                <label class="mb-1"><h6 class="mb-0 text-sm">Mật khẩu</h6></label>
                                <input type="password" asp-for="Password" class="form-control mb-4" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="mb-1"><h6 class="mb-0 text-sm">Xác nhận mật khẩu</h6></label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control mb-4" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        @*<div class="form-group">
                                @ViewBag.error
                            </div>*@

                        <div class="row mb-3 px-3">
                            <button type="submit" name="submit" class="btn btn-blue text-center">Đăng ký</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. Đã đăng ký Bản quyền</small>
                <div class="social-contact ml-4 ml-sm-auto">
                    <span class="fa fa-facebook mr-4 text-sm"></span>
                    <span class="fa fa-google-plus mr-4 text-sm"></span>

                </div>
            </div>
        </div>
    </div>
</div>







