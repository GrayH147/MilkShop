<!-- Blog Section Begin -->
@if (Model.TinTucs != null && Model.TinTucs.Count() > 0)
{
    <section class="from-blog spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title from-blog__title">
                        <h2>Tin tức</h2>
                    </div>
                </div>
            </div>
            <div class="row">

                @foreach (var item in Model.TinTucs)
                {
                    string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <img width="350" height="280" src="~/images/news/@item.Thumb" alt="">
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i> @item.CreatedDate.Value.ToShortDateString()</li>
                                    <li>
                                        <i class="fa fa-comment-o"></i> @{
                                            int rand = 0;
                                            Random rd = new Random();
                                            rand = rd.Next(1, 1000);
                                        }
                                        @rand
                                    </li>
                                </ul>
                                <h5><a href="@url">@item.Title</a></h5>
                                <p>@item.Scontents </p>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
}
<!-- Blog Section End -->
