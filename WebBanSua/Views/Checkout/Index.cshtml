@model WebBanSua.ModelViews.MuaHangVM
@{
    ViewData["Title"] = "Mua hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<WebBanSua.ModelViews.CartItem> Carts = ViewBag.GioHang;
}

<!-- Hero Section Begin -->
<section class="hero hero-normal">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="hero__categories">
                    
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">

                            <input type="text" placeholder="What do yo u need?">
                            <button type="submit" class="site-btn">SEARCH</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>028 3584556</h5>
                            <span>Hoạt động 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/User-content/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đặt hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Trang chủ</a>
                        <span>Đặt hàng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">

        <div class="checkout__form">
            <h4>Thông tin mua hàng</h4>
            <form asp-controller="Checkout" asp-action="Index" method="post">
                <input hidden asp-for="CustomerId" />
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__input">
                            <p>Họ và tên<span>*</span></p>
                            <input asp-for="FullName" placeholder="Họ và Tên" type="text">
                        </div>
                        <div class="checkout__input">
                            <p>Số điện thoại<span>*</span></p>
                            <input asp-for="Phone" placeholder="Số điện thoại" type="text">
                        </div>

                        <div class="checkout__input">
                            <p>Địa chỉ nhận hàng<span>*</span></p>
                            <input asp-for="Address" placeholder="Số điện thoại" type="text">
                        </div>
                    </div>

                    <div class="col-lg-8 col-md-6">
                        <div class="checkout__order">
                            <h4>THÔNG TIN ĐƠN HÀNG</h4>
                            <div class="checkout__order__products">SẢN PHẨM<span>THÀNH TIỀN</span></div>
                            <ul>
                                @if (Carts.Count() > 0)
                                {
                                    foreach (var item in Carts)
                                    {
                                        <li>
                                            @item.product.ProductName<p class="product-quantity"></p><span>@item.TotalMoney.ToString("#,##0")&#273;</span>
                                        </li>
                                    }
                                }

                            </ul>

                            <div class="checkout__order__total">Tổng tiền <span class="amount">@Carts.Sum(x => x.TotalMoney).ToString("#,##0")&#273;</span></div>

                            <p>
                                Vui lòng chọn hình thức thanh toán
                            </p>
                            <div class="checkout__input__checkbox">
                                <label for="payment">
                                    Thanh toán khi giao hàng (COD)
                                    <input type="checkbox" id="payment">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Ví điện tử MOMO
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="checkout__input__checkbox">
                                <label for="paypal">
                                    Thẻ ngân hàng
                                    <input type="checkbox" id="paypal">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <button type="submit" class="site-btn">ĐẶT HÀNG</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
